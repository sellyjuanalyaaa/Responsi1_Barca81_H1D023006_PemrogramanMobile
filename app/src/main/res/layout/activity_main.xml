<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_pertandingan_barca"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/soccerbarca"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_logo_barca"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/barca_logo"
        app:layout_constraintBottom_toBottomOf="@id/iv_pertandingan_barca"
        app:layout_constraintLeft_toLeftOf="@id/iv_pertandingan_barca"
        app:layout_constraintRight_toRightOf="@id/iv_pertandingan_barca"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_barca"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/barca_maroon"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="@string/home_title"
        android:textColor="@color/barca_yellow"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_barca" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/iv_pertandingan_barca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Kartu profil Barça -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="@color/barca_blue">

                <TextView
                    android:id="@+id/tv_profil_barca"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"
                    android:text="FC Barcelona adalah klub sepak bola asal Spanyol yang berdiri pada 1899 dan bermarkas di Stadion Spotify Camp Nou. Klub ini dikenal dengan gaya permainan tiki-taka dan motto “Més que un club.” Barcelona telah meraih banyak gelar bergengsi dan melahirkan pemain legendaris seperti Lionel Messi, Xavi, dan Iniesta."
                    android:textSize="15sp"
                    android:textColor="@color/barca_yellow"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="6dp"
                    android:justificationMode="inter_word"
                    android:elevation="2dp"
                    android:clipToOutline="true"
                    android:textStyle="italic" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Menu navigasi di bawah profil -->
            <LinearLayout
                android:id="@+id/linear_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/card_profil">

                <include
                    android:id="@+id/LayoutHistory"
                    layout="@layout/layout_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

                <include
                    android:id="@+id/LayoutCoach"
                    layout="@layout/layout_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

                <include
                    android:id="@+id/LayoutPlayer"
                    layout="@layout/layout_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
